<div id="<%= dom_id blog %>" class="card mb-3 shadow-sm">
  <div class="card-body">
    <h3>
      <%= blog.title %>
    </h3>
  </div>
  <p class="card-text">
    <%= blog.body %>
  </p>
  <% if blog.user.present? %>
    <p class="text-muted mb-0">
      <strong>Made by</strong>
      <%= link_to blog.user.user_name, blog.user, class:"text-decoration-none" %>
    </p>
  <% else %>
    <p class="text-muted mb-0"><em>Unknown author</em></p>
  <% end %>

</div>