<p style="color: green"><%= notice %></p>

<% content_for :title, "Blogs" %>

<%= search_form_for @q, url:blogs_path, method: :get do |f| %>
  <div>
    <%= f.label :title_cont, "Search by Title" %>
    <%= f.search_field :title_cont, placeholder: "Enter title" %>
  </div>
  <div>
    <%= f.submit "Search" %>
  </div>
<%end%>

<h1>Blogs</h1>

<div id="blogs">
  <% @blogs.each do |blog| %>
    <%= render blog %>
    <p>
      <%= link_to "Show this blog", blog %>
    </p>
  <% end %>
</div>

<%= link_to "New blog", new_blog_path %>
